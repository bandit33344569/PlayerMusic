<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/coverArtImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/music_cover_art_item"
        android:src="@drawable/default_music_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/trackTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:text="@string/track_title"
        app:layout_constraintStart_toEndOf="@+id/coverArtImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trackAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/track_author"
        app:layout_constraintStart_toStartOf="@+id/trackTitle"
        app:layout_constraintTop_toBottomOf="@+id/trackTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>